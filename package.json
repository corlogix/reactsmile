    "url": "https://github.com/corlogix/reactsmile/issues"
  },
  "homepage": "https://github.com/corlogix/reactsmile#readme",
  "devDependencies": {
    "@types/node": "^16.9.2",
    "@types/react": "^17.0.27",
    "@types/react-dom": "^17.0.9",
    
    "@pragmatics/conventional-changelog-preset": "^1.1.1",
    "lerna": "^4.0.0",
    "nodemon": "^2.0.14",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "glob": "^7.2.0",
    
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    
    "sass": "^1.48.0",
