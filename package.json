{
  "name": "reactsmile",
  "version": "1.0.0",
  "scripts": {
    "start": "npm run start --prefix",
    "bootstrap": "lerna bootstrap",
    "postinstall": "npm run bootstrap",
    "clean": "npm-run-all clean-lib clean-buildinfo",
    "clean-lib": "lerna run clean --stream",
    "clean-buildinfo": "rimraf ./**/tsconfig.tsbuildinfo",
    "build": "npm run clean && lerna run build --stream",
    "publish": "lerna publish --yes --no-verify-access"
  },
